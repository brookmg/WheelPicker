<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hello_world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:text="Open Demo Page"
        android:layout_centerInParent="true"/>
    

    <io.itimetraveler.widget.pickerselector.TextSingleWheelPicker
        android:id="@+id/text_wheel_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <Button
        android:id="@+id/chinese_city_wheelpicker_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="ChineseCityWheelPicker（城市选择器）"/>

    <Button
        android:id="@+id/date_wheelpicker_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="DateWheelPicker（日期选择器）"/>

    <Button
        android:id="@+id/time_wheelpicker_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="TimeWheelPicker（时间选择器）"/>

    <Button
        android:id="@+id/country_wheelpicker_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="CountryWheelPicker（国家选择器）"/>

    <Button
        android:id="@+id/digital_wheelpicker_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="DigitalWheelPicker（密码选择器）"/>

    <io.itimetraveler.widget.picker.WheelPicker
        android:id="@+id/wheel_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>


</LinearLayout>
